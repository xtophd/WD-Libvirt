#!/bin/bash

virt-install --name="{{ p_vmname }}" \
    --ram="{{ p_memsize }}" \
    --check disk_size=off \
    --network "network={{ kvm_cfg.network.name }},mac={{ p_mac }},model={{ p_netdev }}" \
    --graphics vnc \
    --vcpus {{ p_vcpu }} \
    --cpu {{ p_cpu }} \
    --boot hd,network,menu=yes \
    --disk "{{ kvm_cfg.qcow_dir }}/{{ p_vmname }}.qcow2,bus={{ p_bus }},sparse={{ p_sparse }},size={{ p_disksize }}" \
